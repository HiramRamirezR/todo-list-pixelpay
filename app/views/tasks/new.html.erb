<div class="container">
  <div class="row">
    <div class="col12">
      <h1 class="text-center">Nueva Tarea</h1>
      <%= link_to "Volver al inicio", home_path, class: "btn btn-warning" %>
      <%= link_to "Ver todas las listas", lists_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <%= form_with model: [@list, @task] do |f| %>
        <%= f.label "Nombre:" %>
        <%= f.text_field :content %>
        <%= f.submit "Crear Tarea", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
