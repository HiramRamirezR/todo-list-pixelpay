<div class="container">
  <div class="row">
    <div class="col12">
      <h1 class="text-center">Nueva Lista de tareas</h1>
      <%= link_to "Volver al inicio", home_path, class: "btn btn-warning" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <%= form_with model: @list do |f| %>
        <%= f.label "Nombre:" %>
        <%= f.text_field :name %>
        <%= f.submit "Crear Lista", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
